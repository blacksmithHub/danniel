<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="40dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:background="@drawable/newbg"
    tools:context="com.dannielexample.libor.danniel.Main2Activity"
    >
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="177dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText_confirmpassword"
            style="@style/password_style"
            android:layout_width="match_parent"
            android:textCursorDrawable="@null"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText_lastname"
            style="@style/names_style"
            android:hint="Last Name"
            android:textAlignment="center"
            android:textCursorDrawable="@null"
            android:textColor="@color/colorWhite"
            android:inputType="textCapWords|textPersonName"/>

        <EditText
            android:id="@+id/editText_firstname"
            style="@style/names_style"
            android:hint="First Name"
            android:textCursorDrawable="@null"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:inputType="textCapWords|textPersonName" />

        <EditText
            android:id="@+id/editText_mi"
            android:textAlignment="center"
            style="@style/mi_style"
            android:textCursorDrawable="@null"
            android:textColor="@color/colorWhite"
            android:hint="M.I"
            android:inputType="textCapCharacters|textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText_email"
            style="@style/editText_style"
            android:hint="E-Mail"
            android:textCursorDrawable="@null"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorWhite"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="125dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:orientation="horizontal">

        <EditText
            style="@style/password_style"
            android:id="@+id/editText_password"
            android:hint="Password"
            android:textColor="@color/colorWhite"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:layout_weight="1.69" />

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:paddingTop="245dp"
        android:paddingLeft="40dp"
        android:paddingRight="30dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:onClick="onClick"
            android:text="We are still in beta, do you wish to continue?"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:paddingTop="290dp"
        android:paddingBottom="70dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_signup"
            style="@style/button_style"
            android:text="Sign up"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:layout_width="181dp" />

    </LinearLayout>


</RelativeLayout>
